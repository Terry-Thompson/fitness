<h1>Edit <%= @shoulder.exercise_name %></h1>
<form action="/shoulders/<%= @shoulder.id %>/edit"  method="POST">
<h3>Repetitions: <input type="number" name="repetitions" placeholder="<%= @shoulder.repetitions %>"></h3>
<h3>Weight: <input type="text" name="weight" placeholder = "<%= @shoulder.weight %>"</h3>
<h3>Description: <input type="text" name="description" placeholder= "<%= @shoulder.description %>">
<br>
<input type="submit" value="Save Changes">
</form>
