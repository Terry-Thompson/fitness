<h1>Edit <%= @ab.exercise_name %></h1>

<form action="/abdominals/<%= @ab.id %>/edit"  method="POST">

<h3>Name: <input type="text" name="exercise_name" value="<%= @ab.exercise_name %>"></h3>

<h3>Repetitions: <input type="number" name="repetitions" value="<%= @ab.repetitions %>"></h3>

<h3>Weight: <input type="text" name="weight" value = "<%= @ab.weight %>"></h3>
  
<h3>Description: <input type="text" name="description" value= "<%= @ab.description %>"></h3>

<br>
<input type="submit" value="Save Changes">
</form>
